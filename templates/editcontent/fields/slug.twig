{% extends '@bolt/editcontent/fields/_base.twig' %}

{% block field %}
    <editor-slug 
        :label="'{{ label }}'"
        :value="'{{ value }}'"
        :name="'{{ name }}'"
        :prefix="'{{ field.slugPrefix  }}'"
        :field-class="'{{ class }}'"
        :generate="'{{ field.slugUseFields|join(', ') }}'"
    ></editor-slug>
{% endblock %}