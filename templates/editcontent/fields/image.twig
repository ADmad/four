{% extends '@bolt/editcontent/fields/_base.twig' %}

{% block field %}
    <editor-image 
        :label="'{{ label }}'"
        :name="'{{ name }}'"
        :value="'{{ field.get('filename') }}'"
        :thumbnail="'{{ field.get('filename')|thumbnail(width=1000, height=1000, area='files') }}'"
        :title="'{{ field.get('title') }}'"
        :alt="'{{ field.get('alt') }}'"
    ></editor-image>
{% endblock %}
