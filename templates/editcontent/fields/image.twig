{% extends '@bolt/editcontent/fields/_base.twig' %}

{% block field %}
    {% if field.definition['upload'] is defined %}
        {% set setPath = field.definition.upload %}
    {% else %}
        {% set setPath = '' %}
    {% endif %}

    {% set directory = path('bolt_upload_post', {'area': area|default('files'), 'path': setPath}) %}
    <editor-image 
        :label="'{{ label }}'"
        :name="'{{ name }}'"
        :value="'{{ field.get('filename') }}'"
        :thumbnail="'{{ field.get('filename')|thumbnail(width=1200, height=1200, area='files', path=setPath) }}'"
        :title="'{{ field.get('title') }}'"
        :alt="'{{ field.get('alt') }}'"
        :directory="'{{directory}}'"
    ></editor-image>
{% endblock %}
