{% extends 'bolt/base.html.twig' %}

{% block title '<strong>' ~ 'title.contentlisting'|trans ~ '</strong>' %}

{% block body_id 'user_edit' %}

{% block body %}

    <table class="ui very basic striped table">
        <thead>
        <tr>
            <th>Title / Excerpt</th>
            <th style="min-width: 9.5em;">Meta</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>

    {% for record in records %}
            <tr class="top aligned">
                <td>
                    <div class="clip-overflow">{{ record.excerpt(300, true) }}</div>
                </td>
                <td>
                    {% set icon = record.definition.icon_one|default('fa-adjust') %}
                    <i class="fas {{ icon|replace({':': '-' }) }} fa-fw"></i>
                    {{ record.definition.name }}
                    {% if not record.definition.singleton %}â„– {{ record.id }}{% endif %}
                    <br>
                    <i class="fas fa-user fa-fw"></i>
                    {{ record.author.fullName }}
                    <br>
                    <i class="fas fa-circle status-published fa-fw"></i> {{ record.publishedAt|localizeddate('medium', 'none', null, 'UTC') }}<br>
                    {#<i class="fa fa-align-left fa-fw"></i>#}
                    {#<a href="{{ path('bolt_edit_record', {'id': record.id}) }}#taxonomy">#}
                        {#Volgorde: 81#}
                    {#</a>#}
                </td>
                <td><img src="{{ record.image|thumbnail(100, 75) }}" width="100" height="72"></td>
                <td><a href="{{ path('bolt_edit_record', {'id': record.id}) }}" class="ui button">Edit</a></td>
            </tr>

    {% endfor %}
    </tbody>
    </table>

    {% if records.haveToPaginate %}
        <div class="navigation text-center">
            {{ pagerfanta(records, 'semantic_ui_translated', {routeName: 'bolt_contentlisting', routeParams: app.request.query.all}) }}
        </div>
    {% endif %}

{% endblock %}

{% block aside %}

    <div class="ui card">
        <div class="content">
            <div class="header">Contentlisting</div>
        </div>
        <div class="content">
            (filtering options go here)
        </div>
    </div>

{% endblock %}