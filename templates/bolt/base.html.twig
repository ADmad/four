<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ block('title')|striptags }}</title>
    {% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.0/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/bolt.css') }}">
    {% endblock %}
</head>

<body>
<div class="wrapper">

    <header data-vue-routing="{{ vueRouting|default() }}">
        <Topbar title="{{ block('title') }}"></Topbar>
    </header>

    <div id="sidebar">
            <Sidebar>side</Sidebar>
    </div>

    <div id="{% block container %}content{% endblock %}">

        {% block body %}
        {% endblock %}

    </div>

    <aside>
        {% block aside %}
        {% endblock %}
    </aside>

    <footer>
        Bolt {{ version|default('unknown') }}
    </footer>

</div>
{% block javascripts %}
    <script src="{{ asset('assets/bolt.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.0/dist/semantic.min.js"></script>

{% endblock %}
</body>

</html>
